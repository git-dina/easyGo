                                            </Path>
                                        </Grid>
                                    </Button>
                                    <TextBlock   Background="{x:Null}" x:Name="txt_count"   Grid.Column="4"
                            Padding="10"   Text="0" Foreground="#378500" FontSize="12"  >
                                        <TextBlock.ToolTip>
                                            <ToolTip x:Name="tt_count" Content="itemUnits Count"
                                              Placement="left" 
                                              HorizontalOffset="35"
                                              PlacementRectangle="50,25,0,0"
                                              VerticalOffset="-45"/>
                                        </TextBlock.ToolTip>
                                    </TextBlock>

                                </StackPanel >
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
                <Border Margin="10 10 0 5" Grid.Column="1"  >
                    <Border.Effect>
                        <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border  Background="{StaticResource MainColor}"   CornerRadius="7 7 0 0">

                            <Grid  Height="40" Margin="10 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Path x:Name="path_title" 
                              Fill="White" Stretch="Fill"
                           VerticalAlignment="Center" 
                        Width="20" Height="20" FlowDirection="LeftToRight"
                             Data="{StaticResource units}"/>

                                <TextBlock Grid.Column="1" Text="title" x:Name="txt_title" Margin="10,0,0,0"  Foreground="White" 
                     FontSize="14"     VerticalAlignment="Center" 
                           FontWeight="Bold" />
                                <Button   x:Name="btn_clear" Click="Btn_clear_Click" Grid.Column="3" Padding="0" 
                               VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"   >
                                    <materialDesign:PackIcon Foreground="White" Kind="RefreshCircle"   Width="30" Height="30"/>
                                </Button>

                            </Grid>
                        </Border>
                        <Border Background="White"  Grid.Row="1">
                            <ScrollViewer  VerticalScrollBarVisibility="Auto" >
                                <StackPanel>
                                    <DockPanel Margin="10 0" LastChildFill="True"  >
                                        <TextBlock x:Name="txt_baseInformation" Text="Base Infomation" Foreground="{StaticResource MainColor}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5,5,5,5"/>
                                        <Separator  Background="{StaticResource MainColor}" VerticalAlignment="Center" Width="auto"  />
                                    </DockPanel>

                                    <Border Grid.Row="8" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                        <Grid   >
                                            <ComboBox x:Name="cb_UnitId"    SelectedValue="{Binding UnitId, Mode=OneWay}"
                                                Padding="10,0,5,0"  TextBlock.Foreground="#4E4E4E"
                                                materialDesign:HintAssist.Hint="Select Unit..."  
                                                 Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  
                                                Grid.Column="0" Height="40"  Margin="4,0"
                                                BorderBrush="#737373" BorderThickness="0"
                                                SelectionChanged="Cb_UnitId_SelectionChanged"/>
                                            <Path Fill="#E81123" x:Name="p_error_UnitId" Stretch="Fill" Margin="5,5,15,5"
            HorizontalAlignment="Right" Grid.Row="8"  Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15" 
           Data="{StaticResource infoCircle}"/>
                                        </Grid>
                                    </Border>
                                 
                                    <Grid Grid.Row="2" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="8" CornerRadius="10" Margin="10,5,0,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">

                                            <Grid>
                                                <TextBox x:Name="tb_UnitValue" Grid.Row="8"  Padding="10,0,5,0"  
                       Text="{Binding UnitValue, Mode=OneWay}"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                       materialDesign:HintAssist.Hint="Count..."    
         Foreground="#4E4E4E"    
                   BorderThickness="0"
               BorderBrush="AliceBlue" MaxLength="100"  Tag="int" PreviewTextInput="Number_PreviewTextInput"
  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
Height="40"   Margin="4,0"  PreviewKeyDown="Spaces_PreviewKeyDown" TextChanged="Tb_UnitValue_TextChanged" />

                                                <Path Fill="#E81123" x:Name="p_error_UnitValue" Stretch="Fill" Margin="5,5,15,5"
            HorizontalAlignment="Right" Grid.Row="8"  Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15" 
           Data="{StaticResource infoCircle}"/>

                                            </Grid>
                                        </Border>
                                        <Border Grid.Row="8" Grid.Column="1" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                            <Grid   >
                                                <ComboBox x:Name="cb_SubUnitId"  
                Padding="10,0,5,0"  TextBlock.Foreground="#4E4E4E"
                materialDesign:HintAssist.Hint="unit..."  
                 Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  
                Grid.Column="0" Height="40"  Margin="4,0"
                BorderBrush="#737373" BorderThickness="0"
                SelectionChanged="Cb_SubUnitId_SelectionChanged"/>
                                                <Path Fill="#E81123" x:Name="p_error_SubUnitId" Stretch="Fill" Margin="5,5,15,5"
            HorizontalAlignment="Right" Grid.Row="8"  Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15" 
           Data="{StaticResource infoCircle}"/>

                                            </Grid>
                                        </Border>
                                    </Grid>
                                  

                                    <Border Grid.Row="8" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                        <Grid>
                                            <TextBox x:Name="tb_PurchasePrice" Grid.Row="8"  Padding="10,0,5,0"  
                       Text="{Binding PurchasePrice, Mode=OneWay}"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                       materialDesign:HintAssist.Hint="PurchasePrice..."    
         Foreground="#4E4E4E"    
                   BorderThickness="0" Tag="decimal"
               BorderBrush="AliceBlue" MaxLength="100" 
               PreviewTextInput="Number_PreviewTextInput"
  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
Height="40"   Margin="4,0"  PreviewKeyDown="Spaces_PreviewKeyDown" />
                                            <Path Fill="#E81123"   Stretch="Fill" Margin="5,5,15,5" x:Name="p_error_PurchasePrice"
                HorizontalAlignment="Right" Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15"
           Data="{StaticResource infoCircle}">
                                            </Path>
                                        </Grid>

                                    </Border>
                                    <Border Grid.Row="8" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                        <Grid>
                                            <TextBox x:Name="tb_Price" Grid.Row="8"  Padding="10,0,5,0"  
                       Text="{Binding Price, Mode=OneWay}"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                       materialDesign:HintAssist.Hint="Price..."    
         Foreground="#4E4E4E"    
                   BorderThickness="0" Tag="decimal"
               BorderBrush="AliceBlue" MaxLength="100" 
               PreviewTextInput="Number_PreviewTextInput"
  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
Height="40"   Margin="4,0"  PreviewKeyDown="Spaces_PreviewKeyDown" />
                                            <Path Fill="#E81123"   Stretch="Fill" Margin="5,5,15,5" x:Name="p_error_Price"
                HorizontalAlignment="Right" Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15"
           Data="{StaticResource infoCircle}">
                                            </Path>
                                        </Grid>

                                    </Border>
                                    <Border Grid.Row="8" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                        <Grid>
                                            <TextBox x:Name="tb_Barcode" Grid.Row="8"  Padding="10,0,5,0"  
                       Text="{Binding Barcode, Mode=OneWay}"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                       materialDesign:HintAssist.Hint="Barcode..."    
         Foreground="#4E4E4E"    
                   BorderThickness="0"
               BorderBrush="AliceBlue" MaxLength="100"  Tag="int" PreviewTextInput="Number_PreviewTextInput"
  materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
Height="40"   Margin="4,0"  PreviewKeyDown="Spaces_PreviewKeyDown"
                       KeyDown="Tb_Barcode_KeyDown"/>

                                            <Path Fill="#E81123" x:Name="p_error_Barcode" Stretch="Fill" Margin="5,5,15,5"
            HorizontalAlignment="Right" Grid.Row="8"  Visibility="Collapsed"   
       VerticalAlignment="Center" Width="15"  Height="15" 
           Data="{StaticResource infoCircle}"/>

                                        </Grid>
                                    </Border>
                                    <Border   Height="40" Margin="10,5,5,5">
                                        <CheckBox Margin="5" x:Name="chb_IsDefaultPurchase" IsChecked="{Binding IsDefaultPurchase, Mode=OneWay}" >
                                            <CheckBox.Content>
                                                <TextBlock  Foreground="{StaticResource textColor}"   x:Name="txt_IsDefaultPurchase" VerticalAlignment="Center" 
                                                Text ="IsDefaultPurchase" />
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>
                                    <Border   Grid.Column="1"  Height="40" Margin="10,5,10,5">
                                        <CheckBox x:Name="chb_IsDefaultSale" Margin="5"
IsChecked="{Binding IsDefaultSale, Mode=OneWay}">
                                            <CheckBox.Content>
                                                <TextBlock  Foreground="{StaticResource textColor}"
                                                            Text ="IsDefaultSale"
                                     VerticalAlignment="Center" x:Name="txt_IsDefaultSale"  />
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </Border>

                                    <Border Grid.Row="10" CornerRadius="10" Margin="10,5,10,5"   BorderThickness="1" BorderBrush="{StaticResource LightGrey}">
                                        <Grid   >
                                            <TextBox  x:Name="tb_Notes" Text="{Binding Notes, Mode=OneWay}"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  Padding="10,0,5,0"  
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                  materialDesign:HintAssist.Hint="Note..."  
                                  Foreground="#4E4E4E"
                                 Margin="5,0,5,-1"  BorderThickness="0"
                            Grid.Column="1"  Height="70" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>


                                    <!--</Grid>-->
                                </StackPanel>
                            </ScrollViewer>
                        </Border>


                        <Border Grid.Row="3" Background="White" CornerRadius="0 0 7 7">
                            <Grid  Grid.Row="3" Margin="5,5,5,10" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="White" Grid.ColumnSpan="3"  Height="1"  BorderBrush="{StaticResource MainColor}" 
                    BorderThickness="1" Opacity="1" Margin="5,5,5,5"  />
                                <Border Grid.Row="2">

                                    <Button x:Name="btn_add"  materialDesign:ButtonAssist.CornerRadius="7"
                                Background="{StaticResource MainColor}" BorderBrush="{x:Null}"
                                Margin="1,1" Click="Btn_add_Click" Foreground="White" >
                                        <TextBlock Name="txt_addButton" Text="Add" Foreground="White" VerticalAlignment="Center"/>
                                    </Button>
                                    <Border.ToolTip>
                                        <ToolTip x:Name="tt_add_Button" Content="Add"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>
                                    </Border.ToolTip>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1">
                                    <Button x:Name="btn_update"   materialDesign:ButtonAssist.CornerRadius="7"
                        Background="{StaticResource MainColor}" BorderBrush="{x:Null}"
                   Margin="1,1"  Click="Btn_update_Click" >

                                        <TextBlock Foreground="White"  Name="txt_updateButton" Text="Update" VerticalAlignment="Center"/>
                                    </Button>
                                    <Border.ToolTip>

                                        <ToolTip x:Name="tt_update_Button" Content="Update"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>

                                    </Border.ToolTip>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="2">
                                    <Button x:Name="btn_delete"  materialDesign:ButtonAssist.CornerRadius="7"
                        Background="{StaticResource MainColor}" BorderBrush="{x:Null}" Foreground="White"
                    Margin="1,1"  Click="Btn_delete_Click" >
                                        <TextBlock  Name="txt_deleteButton" Foreground="White"  Text="Delete" VerticalAlignment="Center"/>
                                    </Button>
                                    <Border.ToolTip>
                                        <ToolTip x:Name="tt_delete_Button" Content="delete"
                                    Placement="left" 
                                    HorizontalOffset="15"
                                    PlacementRectangle="50,0,0,0"
                                    VerticalOffset="30"/>
                                    </Border.ToolTip>
                                </Border>
                            </Grid>

                        </Border>

                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Border>
</Window>
