                                                    <ToolTip x:Name="tt_preview" Content="Preview"
                                              Placement="left" 
                                              HorizontalOffset="35"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-10"/>
                                                </Path.ToolTip>
                                            </Path>
                                            <Path Fill="{StaticResource Blue}" Stretch="Fill"
                          Width="13" Height="6" Margin="17,10,0,0"
