                                              HorizontalOffset="35"
                                              PlacementRectangle="50,0,0,0"
                                              VerticalOffset="-35"/>
                                            </Path.ToolTip>
                                        </Path>
                                    </Button>
                                    <Button   Background="{x:Null}"    Grid.Column="3" Margin="0,1,5,-2" 
